<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/teal</item>
        <item name="android:background">@color/brown</item>
    </style>

    <style name="ToolbarViewStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.LionDriveMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_brown</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/dark_teal</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="navigationViewStyle">@style/NavigationViewStyle</item>
        <item name="toolbarStyle">@style/ToolbarViewStyle</item>
        <!-- System bars color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- App background color. -->
        <item name="android:windowBackground">@color/brown</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="Theme.LionDriveMobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>